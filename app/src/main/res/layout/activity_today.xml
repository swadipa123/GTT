<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wave"
    >

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#A4D3EE"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"

        android:weightSum="1">

        <TextView
            android:scaleType="fitStart"
            android:padding="3dip"
            android:paddingRight="3dp"
            android:textColor="#000"
            android:id="@+id/bankDeposite"
            android:text="Bank Deposited : "
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
             />
        <TextView
            android:layout_toRightOf="@+id/a2"
            android:padding="3dip"
            android:textColor="#000"
            android:id="@+id/etbDeposite"
            android:text="0"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
        />
       </LinearLayout>
        <LinearLayout
            android:id="@+id/btan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:weightSum="1">

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:id="@+id/a211"
                android:text="Cash In Hand : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:id="@+id/cashinhand"
                android:text="0"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:weightSum="1">

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:id="@+id/a2"
                android:text="Closing Balance: "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:id="@+id/closeBalance"
                android:text="0"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonss"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                >


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submit"
                            android:id="@+id/bSubmit"
                            android:layout_below="@+id/etAge"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="20dp"
                            android:textColor="#FFFFFF"
                            android:background="#009900"
                            android:padding="3dp"

                        />

                </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/buttons">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
   tools:context="com.sp.pm.myapplication.TodayActivity"
    android:weightSum="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context="com.sp.pm.myapplication.TodayActivity"
            android:weightSum="1">


                <TextView
                    android:layout_toRightOf="@+id/a2"
                    android:padding="3dip"
                    android:textColor="#000"
                    android:text="Date: "
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />
                    <EditText
                        android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/etDate"
                        android:layout_below="@+id/etDriverName"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:hint=""
                        android:textSize="15dp"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@drawable/bg_edittext"


                    />


            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Driver Name"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
                <Spinner
                    android:id="@+id/spinner"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/defaultText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="wrap_content"

                    />
            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Vehical Name"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />

            <Spinner
                android:id="@+id/vehicleSpinner"
                android:drawSelectorOnTop="true"
                android:prompt="@string/defaultText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="wrap_content"

            />
            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Operator Name"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <Spinner
                android:id="@+id/cabSpinner"
                android:drawSelectorOnTop="true"
                android:prompt="@string/defaultText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="wrap_content"
                />

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Total Trip"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etTotalTrip"
                android:layout_below="@+id/etDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint=""
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="15dp"
                android:background="@drawable/bg_edittext"

                />
            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Opening Balance"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etOpeningBalance"
                android:layout_below="@+id/etDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint=""
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="15dp"
                android:background="@drawable/bg_edittext"

            />

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Total Earning"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etTotalEarning"
                android:layout_below="@+id/etDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint=""
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="15dp"
                android:background="@drawable/bg_edittext"

            />



            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Cash Collected"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etCashCollected"
                android:layout_below="@+id/etTotalTrip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint=""
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="15dp"
                android:background="@drawable/bg_edittext"

                />

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Online Payment"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etOnline"
                android:layout_below="@+id/etTollTax"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint=""
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="15dp"
                android:background="@drawable/bg_edittext"

                 />

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Fuel Expense"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etFuel"
                android:layout_below="@+id/etBankDeposite"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint=""
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="15dp"
                android:background="@drawable/bg_edittext"

                 />

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Toll/Tax"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etToll"
        android:layout_below="@+id/etBankDeposite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint=""
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:background="@drawable/bg_edittext"

         />

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Other Expense"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etOtherExpense"
        android:layout_below="@+id/etFuel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint=""
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:background="@drawable/bg_edittext"

         />

            <TextView
                android:layout_toRightOf="@+id/a2"
                android:padding="3dip"
                android:textColor="#000"
                android:text="Incentives"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etIncentives"
        android:layout_below="@+id/etFuel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint=""
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="15dp"
        android:background="@drawable/bg_edittext"

         />

        </LinearLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>